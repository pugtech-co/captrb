#!/usr/bin/env ruby

# require_relative '../lib/captrb/app'

# # Entry point of your application
# Captrb::App.start(ARGV)
require 'curses'
require_relative '../lib/captrb/controllers/notes_controller'

Curses.init_screen
Curses.start_color
Curses.init_pair(1, Curses::COLOR_WHITE, Curses::COLOR_BLUE)
Curses.init_pair(2, Curses::COLOR_YELLOW, Curses::COLOR_BLACK)

controller = Captrb::NotesController.new

begin
  controller.render
  controller.handle_input
rescue => e
  Curses.close_screen
  puts e.message
  puts e.backtrace
end


Curses.close_screen
